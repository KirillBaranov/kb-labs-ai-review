{
  "name": "@sentinel/analytics",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist", "README.md", "LICENSE"],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build:js": "tsup --config tsup.config.ts",
    "build:types": "tsc -p tsconfig.types.json --emitDeclarationOnly",
    "build": "pnpm clean && pnpm build:js && pnpm build:types",

    "analytics:ingest": "node dist/index.js analytics:ingest",
    "analytics:print":  "node dist/index.js analytics:print",
    "analytics:top":    "node dist/index.js analytics:top",
    "analytics:trend":  "node dist/index.js analytics:trend",
    "analytics:export": "node dist/index.js analytics:export"
  },
  "dependencies": {
    "@sentinel/core": "workspace:*"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3"
  }
}
