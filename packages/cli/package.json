{
  "name": "@sentinel/cli",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "sentinel": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build:js": "tsup --config tsup.config.ts",
    "build:types": "tsc -p tsconfig.types.json --emitDeclarationOnly",
    "build": "pnpm clean && pnpm build:js && pnpm build:types",
    "dev": "tsup --config tsup.config.ts --watch",
    "test": "vitest"
  },
  "dependencies": {
    "@sentinel/analytics": "workspace:*",
    "@sentinel/core": "workspace:*",
    "@sentinel/provider-local": "workspace:*",
    "@sentinel/provider-mock": "workspace:*",
    "@sentinel/provider-openai": "workspace:*",
    "@sentinel/provider-types": "workspace:*",
    "colorette": "^2.0.20",
    "commander": "^12.1.0",
    "dotenv": "^17.2.2"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  }
}
