{
  "name": "@kb-labs/ai-review-core",
  "version": "0.0.1",
  "description": "Core diff analysis, normalization, and rendering helpers for KB Labs AI Review.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@kb-labs/shared-diff": "link:../../../kb-labs-shared/packages/diff",
    "@kb-labs/shared-review-types": "link:../../../kb-labs-shared/packages/review-types",
    "@kb-labs/core-sys": "link:../../../kb-labs-core/packages/core-sys",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "picomatch": "^4.0.2"
  },
  "devDependencies": {
    "@kb-labs/devkit": "link:../../../kb-labs-devkit",
    "@types/node": "^24.3.3",
    "@types/picomatch": "^4",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
