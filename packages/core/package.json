{
  "name": "@kb-labs/ai-review-core",
  "version": "0.1.0",
  "description": "KB Labs AI Review - core parsing, normalization, and rendering",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "author": {
    "name": "Kirill Baranov",
    "url": "https://github.com/kirill-baranov"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kirill-baranov/kb-labs-ai-review.git",
    "directory": "packages/core"
  },
  "scripts": {
    "clean": "rimraf dist",
    "postbuild": "cpy src/lib/schema dist/lib --parents",
    "build": "tsup --config tsup.config.ts && pnpm postbuild",
    "dev": "tsup --config tsup.config.ts --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run -c ../../vitest.config.ts",
    "test:watch": "vitest -c ../../vitest.config.ts"
  },
  "dependencies": {
    "@kb-labs/shared-diff": "link:../../../kb-labs-shared/packages/diff",
    "@kb-labs/shared-review-types": "link:../../../kb-labs-shared/packages/review-types",
    "@kb-labs/core-sys": "link:../../../kb-labs-core/packages/sys",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "picomatch": "^4.0.2",
    "yaml": "^2.5.1"
  },
  "devDependencies": {
    "@kb-labs/devkit": "link:../../../kb-labs-devkit",
    "@types/node": "^24.7.0",
    "@types/picomatch": "^4",
    "cpy-cli": "^4.2.0",
    "rimraf": "^6",
    "tsup": "^8",
    "typescript": "^5",
    "vitest": "^3"
  }
}
