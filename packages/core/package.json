{
  "name": "@sentinel/core",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsup src/index.ts src/scripts/* --format esm --dts --sourcemap --watch",
    "clean": "rimraf dist",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "validate:rules": "tsx src/scripts/validate-rules.ts --profile frontend --profiles-dir packages/profiles",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "picomatch": "^4.0.2",
    "yaml": "^2.5.1"
  },
  "devDependencies": {
    "@types/picomatch": "^4.0.2",
    "eslint": "^9.9.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "license": "MIT",
  "author": {
    "name": "Kirill Baranov",
    "url": "https://github.com/KirillBaranov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kirill-baranov/sentinel-ai.git"
  },
  "bugs": {
    "url": "https://github.com/kirill-baranov/sentinel-ai/issues"
  },
  "homepage": "https://github.com/kirill-baranov/sentinel-ai#readme",
  "keywords": [
    "ai",
    "code-review",
    "framework",
    "static-analysis",
    "sentinel"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
