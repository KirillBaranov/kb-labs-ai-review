{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://sentinel.ai/schema/rules.schema.json",
  "type": "object",
  "required": ["version", "domain", "rules"],
  "properties": {
    "version": { "type": "integer", "minimum": 1 },
    "domain": { "type": "string", "minLength": 1 },
    "metadata": { "type": "object", "additionalProperties": true },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "area", "severity", "description", "link"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "area": { "type": "string", "minLength": 1 },
          "severity": { "type": "string", "enum": ["critical", "major", "minor", "info"] },
          "description": { "type": "string", "minLength": 1 },
          "link": { "type": "string", "minLength": 1 },
          "examples": {
            "type": "object",
            "properties": {
              "bad": { "type": "array", "items": { "type": "string" } },
              "good": { "type": "array", "items": { "type": "string" } }
            },
            "additionalProperties": true
          },
          "scope": {
            "type": "array",
            "items": { "type": "string", "enum": ["changed", "file", "module", "project"] }
          },
          "trigger": {
            "type": "object",
            "properties": {
              "type": { "type": "string", "enum": ["pattern", "heuristic", "llm", "hybrid"] },
              "signals": { "type": "array", "items": { "type": "string" } }
            },
            "additionalProperties": true
          },
          "status": { "type": "string", "enum": ["active", "experimental", "deprecated"] },
          "version": { "type": "integer", "minimum": 1 },
          "experiments": { "type": "object", "additionalProperties": true },
          "ask_feedback": { "type": "boolean" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
