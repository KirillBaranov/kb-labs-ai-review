{
                "name": "sentinel-ai",
                "private": true,
                "type": "module",
                "packageManager": "yarn@1.22.22",
                "workspaces": [
                  "packages/*",
                  "apps/*"
                ],
                "scripts": {
                  "build": "yarn workspaces run build",
                  "type-check": "yarn workspaces run type-check",
                  "lint": "yarn workspaces run lint",
                  "test": "yarn workspaces run test",
                  "dev": "yarn workspace @sentinel/core dev",
                  "demo:context": "yarn workspace @sentinel/core sentinel-build-context profiles/frontend dist/ai-review-context.md",
                  "demo:normalize": "yarn workspace @sentinel/core sentinel-normalize apps/demo/review.md dist/review.normalized.md",
                  "demo:render": "yarn workspace @sentinel/core sentinel-render dist/review.normalized.md dist/ai-review-human.md",
                  "demo:diff": "yarn workspace @sentinel/core sentinel-diff dist/review.normalized.md dist/ai-review-prev.json",
                  "ci": "yarn build && yarn test && yarn lint && yarn type-check"
                },
                "devDependencies": {
                  "eslint": "^9.16.0",
                  "prettier": "^3.3.3",
                  "typescript": "^5.6.3",
                  "vitest": "^2.1.3",
                  "tsx": "^4.19.1",
                  "tsup": "^8.3.5",
                  "yaml": "^2.5.1"
                }
              }