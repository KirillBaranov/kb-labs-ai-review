{
  "name": "@kb-labs/ai-review",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered code review and analysis tool",
  "type": "module",
  "keywords": [
    "ai",
    "code-review",
    "static-analysis",
    "typescript",
    "javascript"
  ],
  "author": {
    "name": "Kirill Baranov",
    "url": "https://github.com/kirill-baranov"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kirill-baranov/kb-labs-ai-review.git"
  },
  "bugs": {
    "url": "https://github.com/kirill-baranov/kb-labs-ai-review/issues"
  },
  "homepage": "https://github.com/kirill-baranov/kb-labs-ai-review#readme",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/providers/*",
    "packages/analytics/*"
  ],
  "scripts": {
    "// ——— devkit": "────────────────────────────────────────",
    "devkit:sync": "node scripts/devkit-sync.mjs",
    "devkit:sync:ci": "node scripts/devkit-sync.mjs --ci-only",
    "devkit:check": "node scripts/devkit-sync.mjs --check",
    "devkit:force": "node scripts/devkit-sync.mjs --force",
    "devkit:help": "node scripts/devkit-sync.mjs --help",
    "postinstall": "pnpm -s devkit:sync || true",
    "// ——— core": "────────────────────────────────────────",
    "clean": "rimraf dist",
    "build": "pnpm -r run build",
    "build:clean": "pnpm -r run clean && pnpm -r run build",
    "dev": "pnpm -r --parallel --filter @kb-labs/ai-review-core --filter @kb-labs/ai-review-analytics --filter @kb-labs/ai-review-provider-* --filter @kb-labs/ai-review-cli run dev",
    "// ——— quality": "────────────────────────────────────────",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc -b tsconfig.tools.json",
    "// ——— ci/qa": "────────────────────────────────────────",
    "check": "pnpm lint && pnpm type-check && pnpm test -- --run",
    "ci": "pnpm clean && pnpm build && pnpm check",
    "// ——— cleanup": "────────────────────────────────────────",
    "clean:all": "rimraf node_modules packages/*/node_modules apps/*/node_modules dist .ai-review",
    "clean:analytics": "rimraf .ai-review/analytics dist/analytics dist/analytics-export",
    "// ——— context": "────────────────────────────────────────",
    "ai-review:context:dev": "pnpm -F @kb-labs/ai-review-cli exec tsx src/index.ts build-context",
    "ai-review:context": "pnpm -r build && pnpm -F @kb-labs/ai-review-cli exec node dist/index.js build-context",
    "// ——— review": "────────────────────────────────────────",
    "ai-review:review:dev": "pnpm -F @kb-labs/ai-review-cli exec tsx src/index.ts review --diff fixtures/changes.diff",
    "ai-review:review:nofail:dev": "pnpm -F @kb-labs/ai-review-cli exec tsx src/index.ts review --diff fixtures/changes.diff --fail-on none",
    "ai-review:review": "pnpm -r build && pnpm -F @kb-labs/ai-review-cli exec node dist/index.js review --diff fixtures/changes.diff",
    "// ——— render": "────────────────────────────────────────",
    "ai-review:render-md:dev": "pnpm -F @kb-labs/ai-review-cli exec tsx src/index.ts render-md --in .ai-review/reviews/review.json --out .ai-review/reviews/review.human.md",
    "ai-review:render-md": "pnpm -r build && AI_REVIEW_PROFILE=frontend pnpm -F @kb-labs/ai-review-cli exec node dist/index.js render-md",
    "ai-review:render-html:dev": "pnpm -F @kb-labs/ai-review-cli exec tsx src/index.ts render-html --in .ai-review/reviews/review.json --out .ai-review/reviews/review.html",
    "ai-review:render-html": "pnpm -r build && AI_REVIEW_PROFILE=frontend pnpm -F @kb-labs/ai-review-cli exec node dist/index.js render-html",
    "// ——— analytics": "────────────────────────────────────────",
    "ai-review:analytics:ingest": "pnpm -F @kb-labs/ai-review-cli exec node dist/index.js analytics:ingest",
    "ai-review:analytics:print": "pnpm -F @kb-labs/ai-review-cli exec node dist/index.js analytics:print",
    "ai-review:analytics:top": "pnpm -F @kb-labs/ai-review-cli exec node dist/index.js analytics:top",
    "ai-review:analytics:trend": "pnpm -F @kb-labs/ai-review-cli exec node dist/index.js analytics:trend",
    "ai-review:analytics:export": "pnpm -F @kb-labs/ai-review-cli exec node dist/index.js analytics:export",
    "// ——— demos": "────────────────────────────────────────",
    "demo": "pnpm -F @kb-labs/ai-review-demo dev"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,yml,yaml}": [
      "prettier -w"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@kb-labs/devkit": "link:../kb-labs-devkit",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@actions/core": "^1",
    "@actions/github": "^6",
    "@types/node": "^24.3.3",
    "@types/picomatch": "^4",
    "@vitest/coverage-v8": "^3.2.4",
    "better-sqlite3": "^12.2.0",
    "colorette": "^2.0.20",
    "prettier": "^3",
    "rimraf": "^6",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.11.0"
}
